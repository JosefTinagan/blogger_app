<h1> Tags </h1>

<% @tags.each do |tag| %>
	<p> <%= link_to tag.name, tag_path(tag) %>
		
		<% if logged_in? %>
			<%= link_to 'delete', tag_path(tag), method: :delete, data: {confirm: 'Really delete this article?'} %>
		<% end %>
	</p>
<% end %>

